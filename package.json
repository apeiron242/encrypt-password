{
  "name": "encrypt-password",
  "description": "App to securely store your password",
  "author": {
    "name": "apeiron242",
    "email": "apeiron242@gmail.com"
  },
  "version": "0.1.3",
  "private": true,
  "dependencies": {
    "@electron/remote": "^1.2.1",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "crypto-js": "^4.1.1",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^4.3.9",
    "react": "^17.0.2",
    "react-build": "^1.0.8",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "sass": "^1.39.2",
    "sqlite3": "^5.0.2",
    "typescript": "^4.1.2",
    "web-vitals": "^1.0.1"
  },
  "build": {
    "productName": "Encrypt Password",
    "win": {
      "icon": "./build/assets/icon.png"
    },
    "mac": {
      "icon": "./build/assets/icon.png"
    },
    "publish": [{
      "provider": "github",
      "owner": "apeiron242",
      "repo": "encrypt-password"
    }]
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start": "tsc ./public/electron.ts && concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "tsc && npm run react-build && electron-builder",
    "release": "tsc && npm run react-build && electron-builder --publish=always",
    "lint": "eslint './src**/*.{ts,tsx}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/crypto-js": "^4.0.2",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/sqlite3": "^3.1.7",
    "babel-loader": "^8.1.0",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "^14.0.1",
    "electron-builder": "^22.11.7",
    "wait-on": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/apeiron242/encrypt-password"
  }
}
